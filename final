!
! Core Router Configuration
!
config t
!
! Basic Setup for New Switches
!
hostname (Switch-Name)
enable secret (your-password)
service password-encryption
banner motd #(Message-of-the-Day)#
!
! Configure VLANs for Data, Voice, and CCTV
!
vlan 10
 name USER
vlan 20
 name VOICE
vlan 30
 name CCTV
!
! Assign IP addresses to VLAN interfaces
!
interface Vlan10
 ip address 10.0.10.1 255.255.255.0
 no shutdown
!
interface Vlan20
 ip address 10.0.20.1 255.255.255.0
 no shutdown
!
interface Vlan30
 ip address 10.0.30.1 255.255.255.0
 no shutdown
!
! Configure DHCP for Data and Voice VLANs
!
ip dhcp excluded-address 10.0.10.1 10.0.10.10
ip dhcp pool DATA_POOL
 network 10.0.10.0 255.255.255.0
 default-router 10.0.10.1
 dns-server 8.8.8.8 8.8.4.4
!
ip dhcp excluded-address 10.0.20.1 10.0.20.10
ip dhcp pool VOICE_POOL
 network 10.0.20.0 255.255.255.0
 default-router 10.0.20.1
!
! CCTV VLAN is configured for static IPs, DHCP is not enabled
!
!
! Configure default route to Firewall
!
ip route 0.0.0.0 0.0.0.0 (firewall-inside-ip)
!
! Configure trunk to Firewall
!
interface GigabitEthernet0/1
 switchport trunk encapsulation dot1q
 switchport mode trunk
!
! Enable Spanning Tree Protocol
!
spanning-tree mode rapid-pvst
!
! Access Switch 1 Configuration
!
hostname (Access-Switch-1)
interface range GigabitEthernet1/0/1-48
 switchport mode access
 switchport access vlan 10
!
! Access Switch 2 Configuration (PoE for IP Phones and CCTV)
!
hostname (Access-Switch-2)
interface range GigabitEthernet2/0/1-24
 switchport mode access
 switchport access vlan 10
!
interface range GigabitEthernet2/0/25-36
 switchport mode access
 switchport access vlan 20
!
interface range GigabitEthernet2/0/37-48
 switchport mode access
 switchport access vlan 30
!
! Enable Port Security
!
interface range GigabitEthernet1/0/1-48
 switchport port-security
 switchport port-security maximum 2
 switchport port-security violation restrict
 switchport port-security aging time 5
!
! Enable Quality of Service (QoS) for VoIP
!
mls qos trust dscp
!
! Configure Access Control Lists (ACLs)
!
access-list 100 permit ip any any
!
! Cisco Firepower Configuration (Basic Setup)
!
configure terminal
!
! Inside Interface
!
interface GigabitEthernet1
 nameif inside
 security-level 100
 ip address (firewall-inside-ip) 255.255.255.0
!
! Outside Interface
!
interface GigabitEthernet2
 nameif outside
 security-level 0
 ip address (public-ip) (public-subnet-mask)
!
! NAT for Internet Access
!
object network INSIDE-NET
 subnet 10.0.0.0 255.255.0.0
 nat (inside,outside) dynamic interface
!
! Allow DHCP traffic through Firewall
!
access-list ACL-INSIDE extended permit ip any any
!
! Enable Syslog for Monitoring
!
logging enable
logging host (syslog-server-ip)
!
! Remote Access VPN (Placeholder)
!
crypto ikev2 policy 1
 encryption aes
 integrity sha
 group 14
 lifetime 86400
!
crypto ikev2 enable outside
!
! Future Expansion for Secondary Firewall
!
! Placeholder for HA configuration
!
!
! Branch Office Connectivity
!
router ospf 1
 router-id (router-id)
 network 10.0.10.0 0.0.0.255 area 0
 network 10.0.20.0 0.0.0.255 area 0
 network 10.0.30.0 0.0.0.255 area 0
 network (branch-office-subnet) (wildcard-mask) area 0
!
interface Tunnel1
 ip address (tunnel-ip) 255.255.255.252
 tunnel source (wan-interface-ip)
 tunnel destination (branch-router-ip)
 tunnel mode gre ip
!
! Static routes for Branches and Production Plant
!
ip route (branch-network) (branch-subnet-mask) (next-hop-ip)
ip route (plant-network) (plant-subnet-mask) (next-hop-ip)
!
! Cisco Unified Communications Manager (CUCM) Configuration
!
voice service voip
 allow-connections h323 to sip
 allow-connections sip to h323
 allow-connections sip to sip
!
telephony-service
 max-ephones 30
 max-dn 30
 ip source-address (CUCM-IP) port 2000
 system message "Cisco Call Manager Express Enabled"
 video
!
ephone-dn 1
 number (extension-number)
 name (User-Name)
 video
!
ephone 1
 mac-address (Phone-MAC-Address)
 type (Phone-Model)
 button 1:1
 video
!


end
!
write memory
